{
	"env": {
		"cypress/globals": true,
		"browser": true,
		"es2021": true
	},
	"plugins": ["cypress", "react", "react-hooks"],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended",
		"plugin:cypress/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"settings": {
		"react": {
			"version": "18.3.1"
		}
	},
	"overrides": [
		{
			"files": ["**/*.spec.js", "**/*.spec.jsx"],
			"env": {
				"jest": true
			}
		}
	]
}
